{% extends "::base.html.twig" %}

{% block title %}{{ role.displayName|e }}{% endblock %}

{% block body %}
    <div class="container">
        <h2>Rolle {{ role.displayName|e }}</h2>

    </div>

    <div class="container">
        <h3>Anforderungen: {{ role.conditions|length }}</h3>
        <div class="row">
            <div class="col-sm-6">
                <ul class="list-group">
                    {% for condition in role.conditions %}
                        <li class="list-group-item"><span class="badge"></span>
                            {{ condition.displayName }}
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>

    <div class="container">
        <h3>Veranstaltungen: {{ role.approvals|length }}</h3>
        <div class="row">
            <div class="col-sm-6">
                <ul class="list-group">
                    {% for approval in role.approvals %}
                        <li class="list-group-item"><span class="badge"></span>
                            {{ approval.event.eventName }}
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
{% endblock %}
